<script>
document.addEventListener('DOMContentLoaded', () => {
    const main = document.getElementById('main-page');
    const noPage = document.getElementById('no-page');
    const letter = document.getElementById('letter-page');

    document.getElementById('no-btn').onclick = () => {
        main.style.display = 'none';
        noPage.style.display = 'block';
    };

    document.getElementById('yes-btn').onclick = () => {
        main.style.display = 'none';
        letter.style.display = 'block';
    };

    document.getElementById('okays-btn').onclick = () => {
        noPage.style.display = 'none';
        main.style.display = 'block';
    };

    document.getElementById('back-btn').onclick = () => {
        letter.style.display = 'none';
        main.style.display = 'block';
    };
});
</script>

